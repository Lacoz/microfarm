{
  "name": "@microfarm/backend",
  "version": "1.0.0",
  "description": "Backend server for MicroFarm game",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & node --watch dist/index.js",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@microfarm/shared": "1.0.0",
    "hono": "^4.1.0",
    "@hono/node-server": "^1.8.0",
    "uuid": "^11.1.0"
  },
      "devDependencies": {
      "@types/uuid": "^10.0.0",
      "ts-node": "^10.9.0",
      "typescript": "^5.3.0",
      "vitest": "^2.0.0"
    }
}
